{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Profil {{ organisateur.pseudo }}{% endblock %}

{% block body %}

    <div class="centrer">
        <h1>{{ organisateur.pseudo }}</h1>
        <div class="afficherProfil">
            {% if organisateur.photo is not null %}
                <img src="{{ asset('images/' ~ organisateur.photo) }}" alt="{{ organisateur.pseudo }}" class="photo-profil">
            {% endif %}
            <div class="form-annuler-sortie">
                <section class="section-champ">
                    <div>Prénom :</div>
                    <div>{{ organisateur.prenom }}</div>
                </section>
                <section class="section-champ">
                    <div>Nom :</div>
                    <div>{{ organisateur.nom }}</div>
                </section>
                <section class="section-champ">
                    <div>Téléphone :</div>
                    <div>{{ organisateur.telephone }}</div>
                </section>
                <section class="section-champ">
                    <div>Email :</div>
                    <div>{{ organisateur.mail }}</div>
                </section>
                <section class="section-champ">
                    <div>Campus :</div>
                    <div>{{ organisateur.campus.nom }}</div>
                </section>
            </div>
        </div>
        <div class="centrer">
            <button >
                <a href="{{ path('accueil') }}">Retour</a>
            </button>
        </div>

    </div>

{% endblock %}



